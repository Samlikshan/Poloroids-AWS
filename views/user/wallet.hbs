<link rel="stylesheet" href="/stylesheets/user/wallet.css">

<div class="wallet-container">
    <div class="wallet-header">
        <h2>My Wallet</h2>
        {{!-- <button class="btn-add-funds">Add Funds</button> --}}
    </div>
    <div class="wallet-balance">
        <p><strong>Balance:</strong> ₹<span id="wallet-balance">{{balance}}.00</span></p>
    </div>
    <div class="wallet-transactions">
        <h3>Transaction History</h3>
        <ul id="transaction-list">
            {{#each transactions}}
            <li class="transaction-item">
                <span class="transaction-date">{{formatDate createdAt}}</span>
                <span class="transaction-description">{{_id}}</span>
                <span class="transaction-amount credit">+ ₹{{amount}}.00</span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
